<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/avia_background_for_game_two_light"
    tools:context=".AviaChoiceLightFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/avia_name_light"
        android:importantForAccessibility="no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/avia_select_light"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/avia_white_light"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/avia_airplane_one_choice_light"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/avia_airplane_one_light"
                android:padding="20dp"
                android:importantForAccessibility="no"
                android:background="@drawable/avia_background_for_button_light"/>
            <ImageView
                android:id="@+id/avia_airplane_two_choice_light"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/avia_airplane_two_light"
                android:padding="20dp"
                android:importantForAccessibility="no"
                android:layout_marginStart="20dp"
                android:background="@drawable/avia_background_for_button_light"/>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>